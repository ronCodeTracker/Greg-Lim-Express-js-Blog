<!DOCTYPE html>
<html lang="en">


 <%-include('layouts/header');-%>


<body>
    <!-- Navigation-->
    <%-include('layouts/navbar');-%>
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('assets/img/home-bg.jpg')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        <h1>Ronald Blog</h1>
                        <span class="subheading">Pepsi 4 ever</span>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Add Search bar using an html text box -->
    <div>
        <form action="/" method="post" class="submitTwo">
            <input type="text" name="searchdata"/>
            <input type="submit" />
        </form>
    </div>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <% for (var i = 0; i < result.length; i++){ %>
                <!-- Post preview-->
                <div class="post-preview">
                    <a href="/post/<%=result[i]._id %>">
                        <h2 class="post-title">
                            <%= result [i].title %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%- result[i].body %>
                        </h3>
                    </a>
                    <p class="post-meta">
                        Posted by
                        <%= result[i].userid.username %>
                        on <%= moment(result[i].datePosted).format('MM-DD-YYYY') %>
                    </p>
                </div>
                <!-- Divider-->
                <hr class="my-4" />
                <%}%>
                <!-- Post preview-->
                
               
                
                <!-- Divider-->
                <hr class="my-4" />
                <!-- Pager-->
                <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div>
            </div>
        </div>
    </div>
    <!-- Footer-->
    <%-include('layouts/footer');-%>

    <!-- scripts  -->
    <%-include('layouts/scripts');-%>

</body>
</html>

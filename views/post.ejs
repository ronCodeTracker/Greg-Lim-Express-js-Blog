<!DOCTYPE html>
<html lang="en">
    <%-include('layouts/header');-%>
    <body>
        <!-- Navigation-->
        <%-include('layouts/navbar');-%>
        </nav>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('<%=result.image%>')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="post-heading">
                            <h1><%=result.title%></h1>
                            <h2 class="subheading"><%-result.body%></h2>
                            <span class="meta">
                                Posted by
                                <%= result.userid.username %>
                                on <%= moment(result.datePosted).format('MM-DD-YYYY') %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Post Content-->
        
        <!-- Footer-->
        <%-include('layouts/footer');-%>
        <%-include('layouts/scripts');-%>
    </body>
</html>
